{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],

    "outDir": "./out",
    "removeComments": true,
    "pretty": false,

    "target": "es2020",
    "module": "CommonJS",

    "resolveJsonModule": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"],
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  }
}
