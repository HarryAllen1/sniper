{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],

    "outDir": "./out",
    "removeComments": true,
    "pretty": false,

    "declaration": true,

    "target": "ESNext",
    "module": "CommonJS",

    "moduleResolution": "node",

    "resolveJsonModule": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["out/", "old/", "lib/"]
}
