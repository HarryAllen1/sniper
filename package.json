{
  "name": "sniper-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "tsup --watch --onSuccess \"node .\"",
    "build": "tsup",
    "watch": "tsup --watch",
    "start": "pnpm build && node out/index.js",
    "pm2:start": "pnpm build && pm2 start out/index.js",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docs:dev": "vitepress dev docs",
    "docs:dev:update": "pnpm run docs:update && vitepress dev docs",
    "docs:dev:update:existing": "node scripts/update-docs.js && vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:build:update": "npm run docs:update && vitepress build docs",
    "docs:build:update:existing": "node scripts/update-docs.js && vitepress build docs",
    "docs:update": "cd apps/sniper && npm run register-commands && cd ../.. && node scripts/update-docs.js"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.7.0",
    "@types/node": "18.7.13",
    "@typescript-eslint/eslint-plugin": "5.33.1",
    "@typescript-eslint/parser": "5.33.1",
    "eslint": "8.22.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.4.0",
    "lodash": "^4.17.21",
    "ms": "^2.1.3",
    "pnpm": "^7.9.5",
    "prettier": "2.7.1",
    "tsup": "^6.2.2",
    "typescript": "4.8.2",
    "vitepress": "1.0.0-alpha.10",
    "vue": "^3.2.36"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.6.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/react",
        "react",
        "react-dom",
        "@algolia/client-search"
      ]
    }
  },
  "packageManager": "pnpm@7.8.0",
  "dependencies": {
    "@discordjs/builders": "^1.2.0",
    "@firebase/app-compat": "^0.1.32",
    "@sapphire/decorators": "5.0.1-pr-434.549335e.0",
    "@sapphire/discord.js-utilities": "5.1.0-pr-434.549335e.0",
    "@sapphire/framework": "3.1.0-pr-512.135ce4a.0",
    "@sapphire/plugin-logger": "^3.0.0",
    "@sapphire/utilities": "^3.9.2",
    "colorette": "^2.0.19",
    "discord.js": "^14.3.0",
    "firebase-admin": "^11.0.1"
  }
}
