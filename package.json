{
  "name": "sniper-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "docs:dev": "vitepress dev docs",
    "docs:dev:update": "pnpm run docs:update && vitepress dev docs",
    "docs:dev:update:existing": "node scripts/update-docs.js && vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:build:update": "npm run docs:update && vitepress build docs",
    "docs:build:update:existing": "node scripts/update-docs.js && vitepress build docs",
    "docs:update": "cd apps/sniper && npm run register-commands && cd ../.. && node scripts/update-docs.js"
  },
  "devDependencies": {
    "@types/node": "18.0.6",
    "colorette": "^2.0.17",
    "eslint": "8.21.0",
    "eslint-plugin-vue": "^9.2.0",
    "lodash": "^4.17.21",
    "ms": "^2.1.3",
    "pnpm": "^7.5.2",
    "prettier": "2.7.1",
    "turbo": "1.3.1",
    "typescript": "4.7.4",
    "undici": "^5.8.0",
    "vitepress": "1.0.0-alpha.4",
    "vue": "^3.2.36"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16.6.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/react",
        "react",
        "react-dom",
        "@algolia/client-search"
      ]
    }
  },
  "packageManager": "pnpm@7.8.0"
}
