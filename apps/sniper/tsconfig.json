{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/typings"],

    "outDir": "./out-tsc",
    "removeComments": true,
    "pretty": false,
    "target": "ESNext",
    "module": "ES2022",
    "importsNotUsedAsValues": "error",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "#lib/*": ["./utils/helpers/*"],
      "#fetch": ["./utils/helpers/fetch.js"]
    }
  },
  "exclude": ["out-tsc/", "out/"],
  "include": ["src/", "tsup.config.ts"]
}
