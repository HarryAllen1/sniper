{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/typings"],

    "outDir": "./out-esm",
    "removeComments": true,
    "pretty": false,
    "target": "ESNext",
    "module": "ES2022",

    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "#lib/*": ["./utils/helpers/*"],
      "#fetch": ["./utils/helpers/fetch.js"]
    }
  },
  "exclude": ["out-esm/", "out/", "old/", "lib/"],
  "include": ["./firebase-credentials.json", "src/", "tsup.config.ts"]
}
