{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "Node",

    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,

    "strict": true,

    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
